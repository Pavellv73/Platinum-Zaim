header
  width 100%
  height auto
  background-color #d8dde0
  position fixed
  z-index 10
  transition all 0.2s ease
  @media (min-width 768px)
    background-color transparent
  @media (min-width 1240px)
    background-color transparent

  .header-content
    width 100%
    height auto
    display flex
    display -webkit-flex
    justify-content space-between
    align-items center
    flex-direction row
    padding-top 23px
    padding-bottom 23px
    box-sizing border-box

    .logo-block
      width 102px
      height 17px
      background-image url("img/logo.png")
      background-size 100% 15px
      background-position center
      background-repeat no-repeat
      @media (min-width 768px)
        width 128px
        height 27px
        background-size 100% 17px


    .menu-container
      display none
      @media (min-width 1240px)
        width auto
        display block

        ul
          display flex
          display -webkit-flex
          justify-content space-between
          align-items center
          flex-direction row

          li
            width auto
            margin 0 15px


          a
            color #6e8898
            font-family Gilroy
            font-size 12px
            font-weight 700
            letter-spacing 0.6px
            text-transform uppercase
            transition all 0.2s ease
            &:hover
              color #2a3549


    .extradition
      display none
      @media (min-width 768px)
        display block

        p
          color #6e8898
          font-family Gilroy
          font-size 12px
          font-weight 700
          letter-spacing 0.6px
          text-transform uppercase

          span
            color #6e8898
            font-family Gilroy
            font-size 20px
            font-weight 300
            letter-spacing 1px
            text-transform uppercase

    .reg-block
      display none
      @media (min-width 1240px)
        display flex
        display -webkit-flex
        justify-content center
        align-items center
        flex-direction row-reverse

        .reg-link
          color #6e8898
          font-family Gilroy
          font-size 12px
          font-weight 500
          letter-spacing 0.6px
          text-decoration none
          margin-right 18px
          transition all 0.2s ease
          &:hover
            color #2a3549
            text-decoration underline


    .burger-block
      width 24px
      height 16px
      background-image url("img/burger.svg")
      background-size 100%
      background-position center center
      background-repeat no-repeat
      @media (min-width 768px)
        width 90px
        height 24px
        background-size auto
      @media (min-width 1240px)
        display none

    .burger-block-open
      background-image url("img/close.svg")
      background-size 100%
      background-position center center
      background-repeat no-repeat
      @media (min-width 768px)
        width 90px
        height 24px
        background-size auto
        background-position center center
      @media (min-width 1240px)
        display none

    .burger-block-open
      width 24px
      height 16px
      background-image url("img/close.svg")
      background-size auto
      background-position center center
      background-repeat no-repeat
      @media (min-width 768px)
        width 90px
        height 24px
        background-size auto
      @media (min-width 1240px)
        display none

    .habmenu
      display none
      width 100%
      height auto
      position absolute
      top 61px
      background-color #d8dde0
      left 0
      right 0
      padding-top 20px
      padding-bottom 24px
      box-shadow: 0px -10px 0 -7px #c6c6c6 inset
      @media (min-width 768px)
        top 76px

      ul
        width 100%
        height auto

        li
          width 100%
          height auto
          margin-bottom 24px
          display flex
          display -webkit-flex
          justify-content center
          align-items center


          a.reg-link
            color #29272c
            font-family "GillSansC"
            font-size 18px
            font-weight 300
            letter-spacing 1px
            text-decoration underline
            margin-bottom 24px
            transition all 0.2s ease
            &:hover
              color #6d6d6d

          a
            color #29272c
            font-family "GillSansC"
            font-size 16px
            font-weight 300
            text-transform uppercase
            letter-spacing 1px
            text-decoration none
            text-align center
            transition all 0.2s ease
            &:hover
              color #6d6d6d

    .hab-visible
      display flex


.header-white
  width 100%
  height auto
  background-color #e2e2e2
  position fixed
  z-index 2
  transition all 0.2s ease
  box-shadow inset 0 -3px 0 #c6c6c6
  @media (min-width 768px)
    background-color #d8dde0
  @media (min-width 1240px)
    background-color #d8dde0
