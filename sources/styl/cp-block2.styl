.cp-block2
  width 100%
  height auto
  background-color #ffffff

  .cp-block2-content
    width 100%
    height auto
    padding-top 40px
    padding-bottom 24px
    box-sizing border-box
    @media (min-width 768px)
      padding-top 48px
      padding-bottom 68px
    @media (min-width 1280px)
      padding-top 64px
      padding-bottom 55px

    .cp-block2-head
      width 100%
      height auto
      margin-bottom 6px

      h2
        color #29272c
        font-family Gilroy
        font-size 26px
        font-weight 600
        line-height 28px
        text-align center
        margin-bottom 6px
        @media (min-width 768px)
          font-size 34px
          font-weight 400
          line-height 36px

    .work-steps
      width 100%
      height auto

      .work-step-block
        width 100%
        height auto
        margin-bottom 40px

        .work-head
          width 100%
          height auto
          margin-bottom 24px

          p
            color #29272c
            font-family Gilroy
            font-size 18px
            letter-spacing 0.33px
            font-weight 600
            text-align center
            @media (min-width 768px)
              font-size 22px
            span
              letter-spacing 0.33px
              font-weight 100


        .work-steps-content
          width 100%
          height auto
          display flex
          display -webkit-flex
          justify-content center
          align-items center
          flex-direction column
          @media (min-width 768px)
            flex-direction row
            justify-content space-around
            align-items flex-start
          @media (min-width 1280px)
            justify-content center

          .work-step
            min-height 304px
            height auto
            display flex
            display -webkit-flex
            justify-content flex-start
            align-items center
            flex-direction column
            width 284px
            box-shadow 0 3px 20px rgba(0, 0, 0, 0.1)
            border-radius 4px
            background-color #ffffff
            margin-bottom 24px
            padding-bottom 26px
            @media (min-width 1280px)
              min-height 390px
              margin-left 40px
              margin-right 40px
              padding-right 16px
              padding-left 16px
              box-sizing border-box

            .work-img
              width 100%
              height auto
              margin-bottom 14px
              @media (min-width 768px)
                height 184px
                display flex
                display -webkit-flex
                justify-content center
                align-items center

              img
                width 100%
                height auto

            .work-text
              width 100%
              height auto

              h3
                text-align center
                color #5c5a5f
                font-family Gilroy
                font-size 20px
                font-weight 600
                letter-spacing 0.4px
                margin-bottom 16px

              p
                text-align center
                color #7b94a4
                font-family "Proxima Nova Lt"
                font-size 16px
                font-weight 300
                letter-spacing 0.38px