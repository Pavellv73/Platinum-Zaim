.block5
  width 100%
  height auto
  background-color #f7f8f8


  .block5-content
    width 100%
    height auto
    padding-top 43px
    padding-bottom 55px
    display flex
    display -webkit-flex
    justify-content center
    align-items center
    @media (min-width 768px)
      padding-top 64px
      padding-bottom 84px

    .block5-head
      width 100%
      height auto
      margin-bottom 39px
      @media (min-width 768px)
        margin-bottom 65px

      h2
        color #29272c
        font-family Gilroy
        font-size 28px
        font-weight 300
        letter-spacing 0.09px
        margin-bottom 8px
        text-align center
        @media (min-width 768px)
          font-size 30px

          br
            display none

      p
        color #9fb1bc
        font-family "Proxima Nova Lt"
        font-size 16px
        font-weight 400
        letter-spacing 0.4px
        text-align center
        @media (min-width 768px)
          font-size 20px
          font-weight 300
          letter-spacing 1px

          br
            display none

    .maps
      width 100%
      height 255px
      background-image url("img/map-platinum.png")
      background-position center
      background-size 100%
      background-repeat no-repeat
      @media (min-width 768px)
        height 344px
        background-size auto 344px
      @media (min-width 1280px)
        height 490px
        background-size auto 441px
        max-width 901px

